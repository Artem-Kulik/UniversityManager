@using UniversityManager.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="register_form" style="background-color:whitesmoke;">
            <div style="width:30%; margin-top: 50px; text-align:center; margin-left:35%;">
                <h3>Courses for Free</h3>
                <p>It is high time for learning</p>
                <form style="margin-top:30px;" class="form_area"
                      id="myForm"
                      action="mail.html"
                      method="post">
                    <div class="row">
                        <div class="col-lg-12 form_group">
                            <div class="form-group" style="text-align:center">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "CenterAlign form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                    @Html.PasswordFor(m => m.Password, new { @class = "CenterAlign form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>                          
                            <div style="height:70%;" class="col-lg-12 text-center">
                                <input type="submit" value="Submit" class="primary-btn" />
                            </div>
                        </div>
                        </div>
                </form>
                <div style="margin-top:20px;" class="form-group">
                    <div>
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
