@model IEnumerable<UniversityManager.Models.Entity.GroupViewModel>

@{
    ViewBag.Title = "GetAllGroups";
}

<h2>GetAllGroups</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountOfStudents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountOfStudents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink("Send request", "PullRequest", new { id=item.Id })
        </td>
    </tr>
}

</table>
